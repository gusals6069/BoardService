<!DOCTYPE HTML>
<html>
    {{>import/header}}
    <body class="is-preload">
        <div id="wrapper">
            {{>import/menu}}
            <section id="banner" class="style2">
                <div class="inner">
                            <span class="image">
                                <img src="/webimage/about/head.jpg" alt="INTRODUCE" />
                            </span>
                    <header class="major">
                        <h1>My Board</h1>
                    </header>
                    <div class="content">
                        <p>
                            <span>Bulletin webpage board is the basis and essence of web development</span>
                        </p>
                    </div>
                </div>
            </section>
            <div id="main" class="alt">
                <section id="board">
                    <div class="inner">
                        <section>
                            <div class="contact-method">
                                <span class="icon solid alt fa-pen"></span>
                                <h3>Write Article</h3>
                            </div>
                            <div class="col-6 col-12-medium">
                                <form id="postForm" method="post" class="needs-validation" novalidate>
                                    <input type="hidden" name="id"              id="id"             value="{{post.id}}"         />
                                    <input type="hidden" name="pageNo"          id="pageNo"         value="{{pageNo}}"          />
                                    <input type="hidden" name="searchType"      id="searchType"     value="{{searchType}}"      />
                                    <input type="hidden" name="searchKeyword"   id="searchKeyword"  value="{{searchKeyword}}"   />

                                    <div class="fields">
                                        <div class="field">
                                            <label for="category" class="form-label">Category</label>
                                            <select id="category" name="category" class="invalid-check">
                                                <option value="">-Choose-</option>
                                                {{#category}}
                                                    <option value="{{cate}}" {{#curr}} selected {{/curr}}>{{cate}}</option>
                                                {{/category}}
                                            </select>
                                            <div class="invalid-feedback">
                                                <span class="icon" style="top:0.225em;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                                        <style>svg{fill:#ff0000}</style><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-384c13.3 0 24 10.7 24 24V264c0 13.3-10.7 24-24 24s-24-10.7-24-24V152c0-13.3 10.7-24 24-24zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/>
                                                    </svg>
                                                </span>
                                                <span class="alert"></span>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <label for="title" class="form-label">Title</label>
                                            <input type="text" id="title" name="title" class="invalid-check" value="{{post.title}}" required autocomplete="off" placeholder="Please enter title"/>
                                            <div class="invalid-feedback">
                                                <span class="icon" style="top:0.225em;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                                        <style>svg{fill:#ff0000}</style><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-384c13.3 0 24 10.7 24 24V264c0 13.3-10.7 24-24 24s-24-10.7-24-24V152c0-13.3 10.7-24 24-24zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/>
                                                    </svg>
                                                </span>
                                                <span class="alert"></span>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <label for="author" class="form-label">Author</label>
                                            <input type="text" id="author" name="author" class="invalid-check" value="{{post.author}}" readOnly />
                                            <div class="invalid-feedback">
                                                <span class="icon" style="top:0.225em;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                                        <style>svg{fill:#ff0000}</style><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-384c13.3 0 24 10.7 24 24V264c0 13.3-10.7 24-24 24s-24-10.7-24-24V152c0-13.3 10.7-24 24-24zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/>
                                                    </svg>
                                                </span>
                                                <span class="alert"></span>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <label for="content" class="form-label">Content</label>
                                            <textarea name="content" id="content" placeholder="Please enter content" rows="6">{{post.content}}</textarea>
                                            <div class="invalid-feedback">
                                                <span class="icon" style="top:0.225em;">
                                                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                                        <style>svg{fill:#ff0000}</style><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-384c13.3 0 24 10.7 24 24V264c0 13.3-10.7 24-24 24s-24-10.7-24-24V152c0-13.3 10.7-24 24-24zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/>
                                                    </svg>
                                                </span>
                                                <span class="alert"></span>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <ul class="actions right">
                                    <li><input type="button" value="List" class="button" id="btn-list-page" /></li>
                                    <li><input type="button" value="Back" class="button" id="btn-view-page" data-target="{{post.id}}" /></li>
                                    {{#isAuthor}}
                                        <li><input type="button" value="Update" class="button primary" id="btn-update" /></li>
                                    {{/isAuthor}}
                                </ul>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
            {{>import/mail}}
            {{>import/footer}}
        </div>
    </body>
</html>