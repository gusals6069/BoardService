<html>
    <section id="contact">
        <div class="inner">
            <section>
                <div class="contact-method">
                    <span class="icon solid alt fa-envelope"></span>
                    <h3>Contact Me</h3>
                </div>
                <div class="col-6 col-12-medium">
                    <form id="mailForm" method="post" class="needs-validation" novalidate>
                        <div class="fields">
                            <div class="field half">
                                <label for="from_name" class="form-label">Name</label>
                                <input type="text" name="from_name" id="from_name" class="invalid-check" required autocomplete="off" placeholder="Please enter your name"/>
                                <div class="invalid-feedback">
                                        <span class="icon" style="top:0.225em;">
                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                                <style>svg{fill:#ff0000}</style><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-384c13.3 0 24 10.7 24 24V264c0 13.3-10.7 24-24 24s-24-10.7-24-24V152c0-13.3 10.7-24 24-24zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/>
                                            </svg>
                                        </span>
                                    <span class="alert">please check your name value</span>
                                </div>
                            </div>
                            <div class="field half">
                                <label for="from_email" class="form-label">Email</label>
                                <input type="text" name="from_email" id="email" class="invalid-check mail-format" required autocomplete="off" placeholder="Please enter your mail"/>
                                <div class="invalid-feedback">
                                        <span class="icon" style="top:0.225em;">
                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                                <style>svg{fill:#ff0000}</style><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-384c13.3 0 24 10.7 24 24V264c0 13.3-10.7 24-24 24s-24-10.7-24-24V152c0-13.3 10.7-24 24-24zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/>
                                            </svg>
                                        </span>
                                    <span class="alert">please check your mail value or format</span>
                                </div>
                            </div>
                            <div class="field">
                                <label for="message" class="form-label">Message</label>
                                <textarea name="message" id="message" rows="6" class="invalid-check" required autocomplete="off" placeholder="Please enter your message"></textarea>
                                <div class="invalid-feedback">
                                        <span class="icon" style="top:0.225em;">
                                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                                <style>svg{fill:#ff0000}</style><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-384c13.3 0 24 10.7 24 24V264c0 13.3-10.7 24-24 24s-24-10.7-24-24V152c0-13.3 10.7-24 24-24zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/>
                                            </svg>
                                        </span>
                                    <span class="alert">please check your message value</span>
                                </div>
                            </div>
                        </div>
                        <ul class="actions right">
                            <li><input type="button" value="Clear"        class="reset" /></li>
                            <li><input type="button" value="Send Message" class="send primary" /></li>
                        </ul>
                    </form>
                </div>
            </section>
            <section class="split">
                <section>
                    <div class="contact-method">
                        <span class="icon solid alt fa-envelope"></span>
                        <h3>Email</h3>
                        <a href="mailto:gusals6069@gmail.com">gusals6069@gmail.com</a>
                    </div>
                </section>
                <section>
                    <div class="contact-method">
                        <span class="icon solid alt fa-phone"></span>
                        <h3>Phone</h3>
                        <a href="tel:01099673786">010-9967-3786</a>
                    </div>
                </section>
                <section>
                    <div class="contact-method">
                        <span class="icon solid alt fa-home"></span>
                        <h3>Address</h3>
                        <span>Bupyeong-gu, Inchon-si, Republic of Korea</span>
                    </div>
                </section>
            </section>
        </div>
    </section>
</html>